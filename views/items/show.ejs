<%- include("../partials/header") %>
<script
  src="https://code.jquery.com/jquery-3.5.1.min.js"
  integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
  crossorigin="anonymous"></script>

<div class="container">
	<div class="row text-center justify-content-center">
	<div class="pl-2 pr-2">
		
			
	
	<h1 class="mt-2">
		<strong><%= item.name %> - <%= item.retail %></strong>
	</h1>
	<h4>
		<%=item.brand%>/<%=item.year%>
	</h4>
	<img class= "img-fluid" src="<%= item.front_image %>">
	
	
	
	<ul class="mt-3">
		<% let arr = item.description.split(".") %>
		<% arr.forEach(function(line){ %>
			<div>
				<%= line %>
			</div>
		<% }) %>
	</ul>
		
	
	<a href="/list" class="btn btn-info btn-sm my-3 mx-1">Go Back</a>
	<a href="/list/<%=item._id%>/edit" class="btn btn-warning btn-sm my-3 mx-1">Edit</a>
	<form class="deletebtn" action="/list/<%=item._id%>?_method=DELETE" method="POST">
		<button class ="btn btn-danger btn-sm my-3 mx-1">Delete</button>
	</form>
	</div>
	</div>
</div>



<script>
	var front = "<%= item.front_image %>"
	var back = "<%=item.back_image %>"
		
	$("img").hover(function(){
		$(this).attr("src", back );
	}, function(){
		$(this).attr("src", front );
	});
</script>

	 


<%- include("../partials/footer") %>