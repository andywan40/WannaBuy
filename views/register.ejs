<%- include("partials/header") %> 
<div class="container text-center">
	<h1 class="pagename">Welcome, Please Sign Up!</h1>
	<div class="row justify-content-center">
		<div class="col-md-6">
			<form action="/register" method="POST">
				<input class="form-control rounded my-2 shadow-sm" type="text" name="username" placeholder="username" required>
				<input class="form-control rounded my-2 shadow-sm" type="password" name="password" placeholder="password" required>
				<button class="btn btn-success btn-lg my-2">Submit</button>
			</form>
			<a href="/login" class="btn btn-info btn-sm">Login</a>
		</div>
	</div>

</div>

<%- include("partials/footer") %>