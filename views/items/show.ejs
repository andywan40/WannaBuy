<%- include("../partials/header") %>
<script src="https://unpkg.com/js-image-zoom@0.4.1/js-image-zoom.js" type="application/javascript"></script>

<div class="container" id="show" >
	<div class="row text-center justify-content-center">
	<div class="px-2">
				
	<div class="top">
		<h1 class="mt-2 pagename">
			<a href="<%=item.website%>" target="_blank"><strong><%= item.name %> - <span class="price"><%= item.retail %></span></strong></a>
		</h1>
		<h4>
			<%=item.brand%>/<%=item.year%>
		</h4>
	</div>
	<!-- <div>
		<a class="magnifier-thumb-wrapper" href="<%=item.front_image%>">
			<img id="thumb" class= "img-fluid resize" src="<%= item.front_image %>"> 
		</a>
	</div> -->
	<div id="img-container" >
        <img id="mainpic" src="<%=item.front_image%>" class="img-fluid resize">
    <div>
	
	<div class="my-3">
		<img class="smallpic mx-2" src="<%= item.front_image %>">
		<img class="smallpic mx-2" src="<%= item.back_image %>">
	</div>
	<ul class="mt-3">
		<% let arr = item.description.split(".") %>
		<% arr.forEach(function(line){ %>
			<div id="desc">
				<%= line %>
			</div>
		<% }) %>
	</ul>

	
		
	
	<a href="/list" class="btn btn-info btn-sm my-3 mx-1">Go Back</a>
	<a href="/list/<%=item._id%>/edit" class="btn btn-warning btn-sm my-3 mx-1">Edit</a>
	<form class="deletebtn" action="/list/<%=item._id%>?_method=DELETE" method="POST">
		<button class ="btn btn-danger btn-sm my-3 mx-1">Delete</button>
	</form>
		<!-- <button class ="btn btn-primary btn-sm my-3 mx-1" id="boughtBtn">Bought</button> -->
	<form  action="/list/<%=item._id%>/bought?_method=PUT" method="POST" id="boughtBtn">
		<button class ="btn btn-primary btn-sm my-3 mx-1">Bought</button>
	</form>
	
	

    
	</div>
	</div>
</div>

